{
  "name": "keboola/symfony-skeleton",
  "type": "project",
  "license": "proprietary",
  "description": "Keboola Symfony app skeleton",
  "authors": [
    {
      "name": "Keboola",
      "email": "devel@keboola.com"
    }
  ],
  "minimum-stability": "stable",
  "prefer-stable": true,

  "autoload": {
    "psr-4": {
      "App\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "App\\Tests\\": "tests/"
    }
  },

  "require": {
    "php": "^8.4",
    "ext-ctype": "*",
    "ext-iconv": "*",
    "keboola/api-error-control": "^4.0",
    "keboola/cors": "^0.4",
    "klapaudius/symfony-mcp-server": "^1.5",
    "react/socket": "^1.16",
    "symfony/console": "^7.3",
    "symfony/dotenv": "^7.3",
    "symfony/flex": "^2.8",
    "symfony/framework-bundle": "^7.3",
    "symfony/monolog-bundle": "^3.9",
    "symfony/runtime": "^7.3",
    "symfony/yaml": "^7.3",
    "ext-pdo": "*"
  },
  "require-dev": {
    "keboola/coding-standard": ">=16.0",
    "phpstan/phpstan": "^2.1",
    "phpstan/phpstan-phpunit": "^2.0",
    "phpstan/phpstan-symfony": "^2.0",
    "phpunit/phpunit": "^12.3",
    "symfony/browser-kit": "^7.3",
    "symfony/css-selector": "^7.3",
    "symfony/phpunit-bridge": "^7.3"
  },
  "conflict": {
    "symfony/symfony": "*"
  },

  "config": {
    "optimize-autoloader": true,
    "preferred-install": {
      "*": "dist"
    },
    "sort-packages": true,
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true,
      "symfony/flex": true,
      "symfony/runtime": true
    }
  },
  "extra": {
    "symfony": {
      "allow-contrib": false
    }
  },

  "scripts": {
    "auto-scripts": {
      "cache:clear": "symfony-cmd",
      "assets:install %PUBLIC_DIR%": "symfony-cmd"
    },
    "post-install-cmd": [
      "@auto-scripts"
    ],
    "post-update-cmd": [
      "@auto-scripts"
    ],
    "phpcs": "phpcs --extensions=php src tests",
    "phpcbf": "phpcbf --extensions=php src tests",
    "phpstan": "phpstan analyse --no-progress -c phpstan-${APP_ENV}.neon",
    "phpunit": "phpunit",
    "ci": [
      "@composer validate --no-check-all --strict",
      "@post-install-cmd",
      "@phpcs",
      "@phpstan",
      "@phpunit"
    ]
  }
}
